# use emacs keybinds
bindkey -e

# do not write duplicate events to the history file
setopt HIST_SAVE_NO_DUPS

setopt SHARE_HISTORY
export HISTSIZE=100000
export SAVEHIST=100000
export HISTFILE="$ZDOTDIR/.zsh_history"

# set up aliases
alias g='git'
alias la='lsd -lah'
alias be='bundle exec'
alias gs='git status'
alias reload="exec zsh"
alias ..='cd ..'
alias ...="cd ../../"
alias ....="cd ../../../"
alias vim='nvim'
alias cm='chezmoi'

[ -f "$HOMEBREW_ROOT/opt/antidote/share/antidote/antidote.zsh" ] && source "$HOMEBREW_ROOT/opt/antidote/share/antidote/antidote.zsh"
[ -f "/usr/share/zsh-antidote/antidote.zsh" ] && source "/usr/share/zsh-antidote/antidote.zsh"
antidote load ${ZDOTDIR:-$HOME}/.zsh_plugins.txt

# interactive cd
icd() {
    zi && zle reset-prompt
}

lg() {
    lazygit && zle reset-prompt
}

# initialize mise
eval "$(mise activate zsh)"

# initialize starship
eval "$(starship init zsh)"

_load_interactive_scripts() {
  # initialize zoxide
  eval "$(zoxide init zsh)"

  # initialize fzf
  source <(fzf --zsh)
}

# zsh-defer _load_interactive_scripts
_load_interactive_scripts

# load shell functions
source "$HOME/.functions.sh"

source "$ZDOTDIR/zsh_highlight_styles.zsh"

# load zsh completion system
source "$ZDOTDIR/completion.zsh"

zle -N ifile
zle -N igrep
zle -N lg
zle -N icd

bindkey '^[p' ifile
bindkey '^[g' igrep
bindkey '^[v' lg
bindkey '^[j' icd

bindkey '^p' history-substring-search-up
bindkey '^n' history-substring-search-down

[ -f ~/.bootstrap/env.sh ] && source "$HOME/.bootstrap/env.sh"
